{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Web Platform",
            "type": "dotenv",
            "targetTasks": [
                "Restore Web Platform",
                "Web Platform npm start"
            ],
            "file": "${input:dotEnvFilePath}"
        },
        {
            "label": "Restore Web Platform",
            "type": "shell",
            "command": "azd restore web-platform",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Web Platform npm start",
            "detail": "Helper task--use 'Start Web Platform' task to ensure environment is set up correctly",
            "type": "shell",
            "command": "npx -y cross-env VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=\"$APPLICATIONINSIGHTS_CONNECTION_STRING\" npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/src/web-platform/",
                "env": {
                    "VITE_API_BASE_URL": "http://localhost:5173",
                    "BROWSER": "none"
                }
            },
            "presentation": {
                "panel": "dedicated",
            },
            "problemMatcher": []
        },

        {
            "label": "Start Feedback API",
            "type": "dotenv",
            "targetTasks": [
                "Restore Feedback API",
                "Feedback API uvicorn launch"
            ],
            "file": "${input:dotEnvFilePath}"
        },
        {
            "label": "Restore Feedback API",
            "type": "shell",
            "command": "azd restore feedback-api",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Feedback API uvicorn launch",
            "detail": "Helper task--use 'Start Feedback API' task to ensure environment is set up correctly",
            "type": "shell",
            "command": "${workspaceFolder}/src/feedback-api/feedback-api_env/bin/uvicorn app.main:app --port 8000 --reload",
            "options": {
                "cwd": "${workspaceFolder}/src/feedback-api/",
                "env": {
                    "API_ENVIRONMENT": "develop"
                }
            },
            "windows": {
                "command": "${workspaceFolder}/src/feedback-api/feedback-api_env/scripts/uvicorn app.main:app --port 8000 --reload"
            },
            "presentation": {
                "panel": "dedicated",
            },
            "problemMatcher": []
        },

        {
            "label": "Start Feedback API and Web",
            "dependsOn":[
                "Start Feedback API",
                "Start Web Platform"
            ],
            "problemMatcher": []
        }
    ],

    "inputs": [
        {
            "id": "dotEnvFilePath",
            "type": "command",
            "command": "azure-dev.commands.getDotEnvFilePath"
        }
    ]
}