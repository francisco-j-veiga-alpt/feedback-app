{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Web Platform",
            "request": "launch",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/src/web-platform/src",
            "url": "http://localhost:5173",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///*": "${webRoot}/*",
                "webpack:///./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "Debug Feedback API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/src/feedback-api",
            "args": [
                "app.main:app",
                "--port", "8000",
                "--reload"
            ],
            "justMyCode": true,
            "python": "${workspaceFolder}/src/feedback-api/feedback-api_env/bin/python3",
            "envFile": "${input:dotEnvFilePath}",
            "windows": {
                "python": "${workspaceFolder}/src/feedback-api/feedback-api_env/scripts/python.exe"
            },
            "preLaunchTask": "Restore Feedback API",
            "env": {
                "API_ENVIRONMENT":"develop"
            }
        }
    ],

    "inputs": [
        {
            "id": "dotEnvFilePath",
            "type": "command",
            "command": "azure-dev.commands.getDotEnvFilePath"
        }
    ]
}